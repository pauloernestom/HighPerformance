    <h1>Deixe o seu depoimento</h1>

    <form id="form" action="/login" method="POST">
        <div class="file-field input-field">
            <div class="btn orange">
              <span>Imagem</span>
              <input name="img"type="file">
            </div>
            <div class="file-path-wrapper">
              <input name="img" class="file-path validate" type="text">
            </div>
          </div>

        <div class="input-field">
            <i class="material-icons prefix">account_circle</i>
            <label for="email">Nome</label>
            <input name="nome" id="nome" type="text">                    
        </div>

        <div class="input-field">
            <i class="material-icons prefix">gavel</i>
            <label for="email">Profis√£o</label>
            <input name="job" id="job" type="text">                    
        </div>

        <div class="row">
          <div class="input-field col s12">
              <i class="material-icons prefix">question_answer</i>
              <textarea name="msg" id="textarea2" class="materialize-textarea" data-length="100"></textarea>
              <label for="textarea2">Mensagem</label>
          </div>
      </div>
        
        <div class="input-field">
            <button id="btn" class="btn waves-effect waves-light right submit" type="submit" name="action">Enviar</button>
        </div>
    </form>
</div>

