        <%- include('partials/header') %>
        <link rel=”canonical” href="https://highperformancedh.azurewebsites.net"/>
        <link rel="stylesheet" href="/css/cadastroAlunos.css">
    </head>
<body>
    
    <%- include('partials/navBar') %>
    <%- include('partials/bikeGif') %> 

    <div class="cadastro" style="padding: 7px;">
        <h1 style="text-align:center;font-weight:bold;margin:0;">Cadastrar Aluno</H1>
        <div class="row" style="text-align: center;">
            <div class="col s12 m12">
                <form id="formCadastro" method="POST" action="/home/cadastrarAlunos">
                    <div class="input-field">
                        <img id="inseriImagem" class="responsive-img logo" src="../../img/imgUser.png" alt="High Performance">
                    </div>
                    <div class="input-field center-align">
                        <input style="visibility: hidden;" type="file" id="imgUser" name="imgUser" accept="image/*" data-error=".errorTxt1">
                        <div class="errorTxt1"></div>
                    </div>
                    <div class="input-field">
                        <i class="material-icons prefix">check</i>
                        <input name="nome" id="nome" type="text" data-error=".errorTxt2">
                        <label for="nome">Nome</label>
                        <div class="errorTxt2 right-align "></div>
                    </div>
                    <div class="input-field">
                        <i class="material-icons prefix">email</i>
                        <input name="email" id="email" type="email" data-error=".errorTxt3">
                        <label for="email">E-mail</label>
                        <div class="errorTxt3 right-align "></div>
                    </div>
                    <div class="input-field">
                        <i class="material-icons prefix">call</i>
                        <input name="telefone" type="tel" id="tel" data-error=".errorTxt4">
                        <label for="telefone">Celular</label>
                        <div class="errorTxt4 right-align "></div>
                    </div>
                    
                    <div class="input-field">
                        <i class="material-icons prefix">directions_run</i>
                        <input id="meta" name="meta" type="text" class="form-control" data-error=".errorTxt5">
                        <label for="meta">Meta</label>
                        <div class="errorTxt5 right-align"></div>
                    </div>
                    <div class="input-field">
                        <i class="material-icons prefix">arrow_forward</i>
                        <input name="valor" type="number" class="form-control"  data-error=".errorTxt6">
                        <label for="valor">Valor</label>
                        <div class="errorTxt6 right-align"></div>
                    </div>
                    
                    <div class="input-field">
                        <button class="btn waves-effect waves-light right submit" type="submit" 
                            id="btnSubmit">Cadastrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        let inserirImagem =  document.getElementById('inseriImagem')
        let imagemUser = document.getElementById('imgUser')
        inserirImagem.addEventListener('click', ()=>imagemUser.click())

        var loadFile = function(event) {
            var reader = new FileReader();
            reader.onload = function(){
                var output = document.getElementById('inseriImagem');
                output.src = reader.result;
                console.log(output.src)
            }
            reader.readAsDataURL(event.target.files[0]);
        }
              
        imagemUser.addEventListener('change',loadFile)           
        

    </script>

    <%- include('partials/footer') %>