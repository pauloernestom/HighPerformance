<%- include('partials/header') %>
        <link rel=”canonical” href="https://highperformance.herokuapp.com/pages/cadastro/cadastro.html" />
        <link rel="stylesheet" href="/css/editarMensalidade.css">
    </head>
<body>
    
    
<%- include('partials/navBar') %>
<%- include('partials/bikeGif') %> 

<div id="containerMensalidades">
    <div class="col s12 m12 l12">
        <h2>Alterar mensalidade</h2>
    </div>

    <div class="row">
        <div class="col s12 m4 l6">
            <img src="/img/chart.gif" alt="Ilustracao" class="responsive-img">
        </div>
        <div class="col s12 m8 l6" id="containerForm">
            <form  id="formEditarMensalidade" action="/home/mensalidade/editar/<%= mensalidade.id %>?_method=PUT" method="POST">
                <div class="input-field">
                    <i class="material-icons prefix">account_circle</i>
                    <input name="valor" id="valor" type="number" data-error=".errorTxt1" value="<%= mensalidade.valor %>">
                    <label for="valor">Valor</label>
                    <div class="errorTxt1 right-align"></div>
                </div>
                <div class="input-field">
                <div class="col s12">
                    <select class="browser-default" id="pago" name="pago" data-error=".errorTxt2">
                        <option value="" disabled selected>Selecione o status</option>
                        <option value="1">Recebido</option>
                        <option value="0">A receber</option>
                    </select>
                    <div class="input-field">
                        <div class="errorTxt2 right-align"></div>
                    </div>
                </div> 
                </div> 
                    <input name="alunos_id" id="alunos_id" type="number" value="<%= mensalidade.alunos_id %>" style="display: none;">
                <div class="input-field">
                    <button class="btn waves-effect waves-light right submit" type="submit" >Salvar</button>
                </div>
                </div>
            </form>
        </div>


    <%- include('partials/footer') %>
    <%- include('partials/rodape') %>
    <script>
        $(document).ready(function(){
    $('select').formSelect();
  });
    </script>
    